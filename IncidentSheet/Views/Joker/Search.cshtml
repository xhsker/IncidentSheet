@model IEnumerable<IncidentSheet.Models.Joker>

<style>
    #entry {
        font-family: Tahoma;
        border-collapse : collapse;
        width: 100%;
    }

    #entry th{
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: center;
        background-color: forestgreen;
        color: white
    }

    #entry td{
        border: 1px solid;
        padding: 8px;
    }

    #entry tr:nth-child(even){background-color: lightgrey;}


</style>

<body>

@{ 
    ViewBag.Title = "Search Daily Incident Reports";
}

    <p>
    @using (Html.BeginForm())/* name of the view used(action), name of controller used, formmethod.get*/
    {
        <b>Search By: </b>@Html.RadioButton("searchBy", "Unit", true) <text>  Reporting Unit  | </text>
        @Html.RadioButton("searchBy", "IncidentDate")<text> Date of Incident  | </text>
        @Html.RadioButton("searchBy", "Incident")<text> Type of Incident  |</text>
        @Html.TextBox("Search")<input type="submit" value="searchInput"/>
    }
    </p>

    <div style="font-family: Arial">

        <table id="entry">

            <tr>
                <th align="center">
                    @Html.DisplayNameFor(model => model.Unit)
                </th>
                <th align="center">
                    @Html.DisplayNameFor(model => model.IncidentDate)
                </th>
                <th align="center">
                    @Html.DisplayNameFor(model => model.Incident)
                </th>
            </tr>

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3">No Match with Search Criteria</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.IncidentDate)
                        </td>
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.Incident)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</body>
