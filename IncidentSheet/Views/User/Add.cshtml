@model IncidentSheet.ViewModels.AddUserViewModel

@{ 
    ViewData["Title"] = "Add";
}


    <h2>Add a New User</h2>

    <form asp-controller="User" asp-action="Add" method="post">

        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" type="text"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserPassword" class="control-label"></label>
                    <input asp-for="UserPassword" class="form-control" type="password" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default"/>
                </div>
            </div>
        </div>

        <div>
            <a asp-controller="Joker" asp-action="Index">Back to Incident List</a>
        </div>
</form>

